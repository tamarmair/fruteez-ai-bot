      try {
        const response = await fetch("https://your-server.com/generate", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ day, fruit, style })
        });

        const data = await response.json();
        output.innerText = data.text || "×œ× × ×•×¦×¨ ×¤×•×¡×˜";
        image.src = data.image || "";
      } catch (err) {
        output.innerText = "âŒ ×©×’×™××”: " + err.message;
