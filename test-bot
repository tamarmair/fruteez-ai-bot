  <div class="container">
    <h1>✨ פוסט + תמונה עם AI - Fruteez</h1>

    <label for="day">יום בשבוע:</label>
    <select id="day">
      <option value="ראשון">ראשון</option>
      <option value="שני">שני</option>
      <option value="שלישי">שלישי</option>
      <option value="רביעי">רביעי</option>
      <option value="חמישי">חמישי</option>
      <option value="שישי">שישי</option>
      <option value="שבת">שבת</option>
    </select>

    <label for="fruit">פרי / נושא:</label>
    <input type="text" id="fruit" placeholder="למשל: אוכמניות, מנגו...">

    <label for="style">סגנון כתיבה:</label>
    <select id="style">
      <option value="מצחיק">מצחיק</option>
      <option value="אישי">אישי</option>
      <option value="מקצועי">מקצועי</option>
    </select>

    <button onclick="generate()">צור פוסט + תמונה</button>

    <div class="output" id="output">...</div>
    <img id="image" src="" alt="">
  </div>

  <script>
    async function generate() {
      const day = document.getElementById("day").value;
      const fruit = document.getElementById("fruit").value;
      const style = document.getElementById("style").value;
      const output = document.getElementById("output");
      const image = document.getElementById("image");

      output.innerText = "⏳ יוצרת פוסט ותמונה...";
      image.src = "";

      try {
        const response = await fetch("https://your-server.com/generate", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ day, fruit, style })
        });

        const data = await response.json();
        output.innerText = data.text || "לא נוצר פוסט";
        image.src = data.image || "";
      } catch (err) {
        output.innerText = "❌ שגיאה: " + err.message;
      }
    }
  </script>
</body>
